import math
from random import randint
from datetime import datetime

# Часть 1. Вычисление и печать набора ключей в виде битовой последовательности
for i in range (3, 13):
    print(2 ** i, end="-bit sequence: ")
    print(2 ** (2 ** i))

# Часть 2. Генерация и печать случайного шестнадцатеричного значения в зависимости от текущей длиным и нахолждение времени его поиска 
for test_length in range (3, 10):
    
   print('\n')
    print("Random ", end = "")
    print(2  length, end = "-bit key: ")
    test_length = int(math.log(2  (2  length), 16))
    
    rand_suffix = hex(randint(16  (test_length - 1), 16  test_length - 1))
    
    rand_prefix = hex(randint(0, 15))
    
    rand_hex_key = rand_prefix
    for i in range (3, len(rand_suffix)):
        rand_hex_key = rand_hex_key + rand_suffix[i]
    print(rand_hex_key)
    start_time = datetime.now()
    for runner in range (16  (test_length - 1), 16  test_length):
        if hex(runner) == rand_hex_key:
            print("Execution time: ", end = "")
            print((datetime.now() - start_time).microseconds / 1000 + (datetime.now() - start_time).seconds * 1000, end = "ms")
    
